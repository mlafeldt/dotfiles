[user]
	name = Mathias Lafeldt
	email = mathias.lafeldt@gmail.com
	signingkey = ECB164AC027DA2ED
[color]
	ui = true
[alias]
	aa = add --all :/
	actions = ci-status --verbose --color=always
	bc = !sh -c 'git branch --merged | grep -v \\* | xargs -n 1 git branch -d'
	bl = branch -v --sort=-committerdate
	br = branch
	ci = commit -v --no-verify
	clobber = clean -ffdx --exclude .env* --exclude .dev.vars --exclude .worktrees
	co = checkout
	di = diff
	dic = diff --cached
	din = diff --name-only
	fe = fetch --all --prune
	fixup = commit --amend -C HEAD
	gn = goodness
	lol = log --graph --decorate --oneline
	pi = cherry-pick
	rh = reset --hard
	sd = !sh -c 'git ls-files -z -- "${@:3}" | xargs -0 sd "$1" "$2"' -
	st = status -sb
	use-ssh = config url."git@github.com:".pushinsteadof https://github.com/
	wd = diff --word-diff
	wip = commit -amWIP --no-gpg-sign
	wt = worktree
[core]
	whitespace = trailing-space,space-before-tab
	autocrlf = input
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes_global
	pager = diff-highlight | less
[init]
	defaultBranch = main
[commit]
	gpgsign = true
	template = ~/.gitmessage
[log]
	decorate = true
[push]
	default = simple
	autoSetupRemote = true
[pull]
	rebase = true
[merge]
	tool = vimdiff
	conflictstyle = zdiff3
[rebase]
	autosquash = true
	autoStash = true
[rerere]
	enabled = true
[diff]
	renames = copies
	algorithm = patience
	compactionHeuristic = true
	noprefix = true
	colormoved = default
	colormovedws = allow-indentation-change
[interactive]
	diffFilter = diff-highlight
[diff "lockb"]
	binary = true
	textconv = bun
[diff "gem"]
	textconv = gem spec
[diff "sqlite3"]
	binary = true
	textconv = "echo .dump | sqlite3"
[credential]
	helper = cache --timeout=3600
[include]
	path = .gitconfig.local

