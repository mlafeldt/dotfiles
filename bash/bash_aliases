# vim: ft=sh

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias t='tree'
alias ta='tree -a'

alias bx='bundle exec'
alias bi='bundle install --jobs=3 --retry=3'
alias bu='bundle update --jobs=3 --retry=3'

alias vag='/usr/bin/vagrant'
alias tf=terraform

alias hd='hexdump -C'

command -v hub >/dev/null && alias git='hub'
alias gti=git

alias got=go

alias ubuntu='docker run -it --rm -v $(PWD):/data -w /data ubuntu:14.04 /bin/bash'
alias debian='docker run -it --rm -v $(PWD):/data -w /data debian:jessie /bin/bash'
alias centos='docker run -it --rm -v $(PWD):/data -w /data centos:7 /bin/bash'
alias alpine='docker run -it --rm -v $(PWD):/data -w /data alpine /bin/sh'

alias fix-docker-machine='docker-machine ssh default "date; sudo ntpd -p ntp.ubuntu.com; sleep 1; date"'
alias fix-spotlight='sudo mdutil -i on /'

alias did="vim +'normal Go' +'r!date' ~/Dropbox/Documents/did.txt"

:
