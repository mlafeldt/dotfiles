#!/bin/sh
# Upgrade software installed by Homebrew
# Usage: brew-upgrade
# Written by Mathias Lafeldt <mathias.lafeldt@gmail.com>

set -e -x

if command -v rbenv >/dev/null 2>/dev/null; then
    # Switch to system's Ruby
    trap "rbenv global $(rbenv global)" EXIT
    rbenv global system
fi

# Do the upgrade
brew update -v
brew upgrade -v
