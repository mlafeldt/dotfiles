#!/bin/sh
# Upgrade software installed by Homebrew
# Usage: brew-upgrade
# Written by Mathias Lafeldt <mathias.lafeldt@gmail.com>

set -e

if [ -f /usr/local/share/chruby/chruby.sh ]; then
    # Switch to system's Ruby
    . /usr/local/share/chruby/chruby.sh
    chruby system
    ruby --version
fi

# Do the upgrade
brew update
brew upgrade
brew cleanup
