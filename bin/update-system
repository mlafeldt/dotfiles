#!/bin/sh
# Update system software
# Usage: update-system
# Written by Mathias Lafeldt <mathias.lafeldt@gmail.com>

set -e

# Use system Ruby and Python
PATH="/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
export PATH

update_homebrew() {
    if command -V brew >/dev/null 2>/dev/null; then
        echo "+ Updating homebrew"
        brew update
        brew upgrade
        brew cleanup
    fi
}

update_vim_plugins() {
    if command -V vim >/dev/null 2>/dev/null; then
        echo "+ Cleaning up Vim plugins"
        vim +BundleClean! +qa
        echo "+ Updating Vim plugins"
        vim +BundleUpdate +GoUpdateBinaries +qa
    fi
}

update_homebrew
update_vim_plugins

:
